Small Area: <%= @small_area.small_area_name %>

<p><%= link_to '投稿',"/areas/#{@small_area.middle_id}/small_areas/#{@small_area.small_id}/posts/new/",method: :get %></p>

<div>
    <% @posts.each do |post| %>
      <% if user_signed_in? && current_user.id==post.user_id %>
        <div class='more'>
          <ul class='more_list'>
            <li><%= link_to '編集',"/areas/#{@small_area.middle_id}/small_areas/#{@small_area.small_id}/posts/#{post.id}/edit", method: :get %></li>
            <li><%= link_to '削除', "/areas/#{@small_area.middle_id}/small_areas/#{@small_area.small_id}/posts/#{post.id}",method: :delete %></li>
          </ul>
        </div>
      <% end %>
        <%= simple_format(post.text) %>
      <% end %>

</div>
